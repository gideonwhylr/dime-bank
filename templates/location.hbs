---
{
    "stream": {
        "$id": "sites-locations-2",
        "source": "knowledgeGraph",
        "destination": "pages",
      "fields": [
        "id",
        "uid",
        "name",
        "address",
        "description",
        "mainPhone",
        "photoGallery",
        "services",
        "geomodifier",
        "hours",
        "c_slug",
        "c_parents.name",
        "c_parents.c_slug",
        "c_parents.c_parents.name",
        "c_parents.c_parents.id",
        "c_parents.c_parents.c_slug",
        "c_branchServices.name",
        "c_branchServices.richTextDescription",
        "c_branchServices.c_ctas",
        "slug"
      ],
      "filter": {
        "entityTypes": [
          "location"
        ]
      }
    },
    "urlFormat": "{{c_slug}}-x.html"
}
---


<html>
    <body>
        <h1> Welcome to {{name}} </h1>
          <div> 
            <p> {{address.line1}} </p>
            <p> {{address.city}}, {{address.region}} {{address.postalCode}}</p>
          </div>

          <div>
            <h4 >Branch Hours</h4>
            <div class='hours-list'>
              {{#each hours}}
                <p>{{@key}}
                {{#each this}}
                  {{#each this}}
                    {{this.start}}-{{this.end}}
                  {{/each}}
                {{/each}} 
                </p> 
              {{/each}}
            </div>
          </div>

        <div>
          {{#each c_branchServices}}
          <div>
              <a href="{{this.c_ctas.[0].url}}">{{this.name}}</a>
          </div>
          {{/each}}
        </div>

    </body>

</html>
