<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{name}} - {{c_parents.[0].id}}</title>
    
  </head>
    <body>
        <script src="/index.bundle.js"></script> 
      
        {{> header }}

        <nav class="container">
          <ol class="list-reset py-4 pl-4 rounded flex bg-grey-light text-grey">
            <li class="px-2"><a href="/index" class="no-underline text-indigo">Home</a></li>
            <li>/</li>
            <li class="px-2"><a href="/{{c_parents.[0].c_slug}}" class="no-underline text-indigo">{{c_parents.[0].id}}</a></li>
            <li>/</li>
            <li class="px-2">{{name}}</li>
          </ol>
        </nav>

        <div class='title bg-blue-900 pt-6 pb-6 border-b-8 border-green-400'> 
          <h1 class='text-5xl  font-extralight text-white ml-6'> Welcome to {{name}}, <a href="/{{ c_parents.[0].c_slug }}">{{ c_parents.[0].id }}</a></h1>
        </div>
        <div class="container mx-auto px-32">
          <div class='mt-6  flex'> 
            <div class='other-locations pr-32'>
              <h4 class='text-2xl font-bold mb-4'>Other Branches in this City</h4>
                <ul class="children-list list-disc">
                    {{#each c_children}}
                        <li><a href="/{{ this.c_slug }}">{{ this.name }} - {{this.address.line1}}, {{this.address.region}} {{this.address.postalCode}}</a></li>
                    {{/each}}
                </ul>
            </div>
    {{ > footer }}
    </body> 
</html>
