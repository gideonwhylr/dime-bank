<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{name}} - Home Page</title>
    
  </head>
    <body>
        <script src="/index.bundle.js"></script> 

        {{> header }}

        <div class='title bg-blue-900 pt-6 pb-6 border-b-8 border-green-400'> 
          <h1 class='text-5xl  font-extralight text-white ml-6'> Welcome to {{name}}</h1>
        </div>
        <div class="container mx-auto px-32">
          <div class='mt-6  flex'> 
            <div class='other-locations pr-32'>
              <h4 class='text-2xl font-bold mb-4'>We're Located in the Following States</h4>
                <ul class="state-list list-disc">
                    {{#each c_children}}
                        <li><a href="/{{ this.c_slug }}">{{ this.name }}</a></li>
                        {{#each c_children}}
                            <ul class="city-list list-disc">
                                <li><a href="/{{this.c_slug}}">--- {{this.name}}</a></li>
                            </ul>
                        {{/each}}
                    {{/each}}
                </ul>
            </div>

    {{ > footer }}
    </body> 
</html>
